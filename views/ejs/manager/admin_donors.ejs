            <div id="donorslist" ng-controller="donorsListController">
              <div class="text-center">
                <table align="center" style="margin: 0; width: 100%;">
                  <tr>
                    <th>First</th>
                    <th>Last</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Donation</th>
                    <th>Description</th>
                    <th>Chapter</th>
                    <th>Loved One</th>
                    <th>Letter First</th>
                    <th>Letter Last</th>
                    <th class="addrPlus">Address<br><i class="fa fa-plus-square text-center" ></i></th>
                    <th class="address addrMinus">Letter Street<br><i class="fa fa-minus-square" ></i> </th>
                    <th class="address">Letter City</th>
                    <th class="address">Letter State</th>
                    <th class="address">Letter Zip</th>
                    <th class="address">Letter Country</th>

