<!-- chapter.ejs -->
<!doctype html>

<!-- ASSIGN OUR ANGULAR MODULE -->
<html ng-app="HOW">
<head>
    <!-- META -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Heroes on the Water</title>

    <!-- SCROLLS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <style>
        html            { overflow-y:scroll; }
        body            { padding-top:50px; padding-bottom:50px;}
        .creation-form  { margin: 20px; }
        .event     { background-color: #FFEBCD; overflow: hidden; margin: 0 auto;}
    </style>

    <!-- SPELLS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
    <script src="http://localhost:8080/js/core.js"></script>
    <script src="http://localhost:8080/js/controllers/regionsController.js"></script>
    <script src="http://localhost:8080/js/controllers/chaptersController.js"></script>
    <script src="http://localhost:8080/js/controllers/eventsController.js"></script>
    <script src="http://localhost:8080/js/services/main.js"></script>

    <!-- FAVICON -->
    <link rel="icon" href="http://heroesonthewater.org/wp-content/uploads/2014/04/logo-ready-ad.png" type="image/png">

</head>
<body>
    <div class="container" ng-controller="eventsController">

        <h1 class="text-center">Chapter: <%= region.chapters.name %></h1>
        <p class="text-center">Region: <%= region.name %></p>
        <!-- FORM TO CREATE EVENTS -->
        <div id="event-creation-form" class="row creation-form">
            <h1 class="text-center"> EVENT CREATION </h1>
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control input-lg text-center" placeholder="Insert name here" ng-model="formData.name">
                        <br>
                        <input type="text" class="form-control input-lg text-center" placeholder="Insert date here" ng-model="formData.date">
                        <br>
                        <input type="text" class="form-control input-lg text-center" placeholder="Insert start here" ng-model="formData.start"><br>
                        <input type="text" class="form-control input-lg text-center" placeholder="Insert end here" ng-model="formData.end">
                        <br>
                        <input type="text" class="form-control input-lg text-center" placeholder="Insert venue here" ng-model="formData.venue">
                        <br>
                        <input type="text" class="form-control input-lg text-center" placeholder="Insert description here" ng-model="formData.description" maxlength="500">
                    </div>
                </form>
            </div>

            <!-- createToDo() WILL CREATE NEW TODOS -->
            <button type="submit" class="btn btn-primary btn-lg col-sm-4 col-sm-offset-4" ng-click="createEvent(<%= JSON.stringify(region) %>)">Add Event</button>
        </div>

        <!-- list of events in chapter -->
        <% for(var i=0; i < region.chapters.events.length; i++) {%>
        <div class="col-sm-12 event">
                <div class="col-sm-4">
                    <h3>Event: <%= region.chapters.events[i].name %></h3>
                    <h4>Date: <%= region.chapters.events[i].date %></h4>
                    <h4>Start: <%= region.chapters.events[i].start %></h4>
                    <h4>End: <%= region.chapters.events[i].end %></h4>
                    <h4>Venue: <%= region.chapters.events[i].venue %></h4>
                    <p>Description: <%= region.chapters.events[i].description %></p>
                    <p>Inventory:</p>
                    <% for(var j=0; j < region.chapters.events[i].inventory.length; j++) {%>
                        <p> <%= region.chapters.events[i].inventory[j].number %> <%= region.chapters.events[i].inventory[j].item %></p>
                    <%} %>
                </div>
                <div class="col-sm-6" ng-controller="userController">
                    <div class="col-sm-9">
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control input-sm text-center" placeholder="email" ng-model="formData.email">
                        </div>
                    </form>
                    </div>
                    <div class="col-sm-3">
                    <button type="submit" class="btn btn-primary btn-sm" ng-click="addEventPermission(<%= JSON.stringify(region) %>)">Add</button>
                    </div>
                </div>
                <div class="col-sm-1">
                    <a type="submit" class="btn btn-primary btn-sm" href="/<%= region.name %>/<%= region.chapters.name %>/<%= region.chapters.events[i].name %>">Manage</a>
                </div>
                <div class="col-sm-1">
                    <button type="submit" class="btn btn-primary btn-sm" ng-click="deleteEvent(event.name)">Delete</button>
                </div>
        </div>
        <% } %>
    </div>
</body>
</html>