<!-- index.html -->
<!doctype html>

<!-- ASSIGN OUR ANGULAR MODULE -->
<html ng-app="HOW">
<head>
    <!-- META -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Heroes on the Water</title>

    <!-- SCROLLS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <style>
        html            { overflow-y:scroll; }
        body            { padding-top:50px; padding-bottom:50px;}
        .creation-form  { margin: 20px; }
        .region-list    { background-color: #F5F5DC; overflow: hidden; margin: 0 auto;}
        .chapter-list   { background-color: #FFE4C4; overflow: hidden; margin: 0 auto;}
        .event-list     { background-color: #FFEBCD; overflow: hidden; margin: 0 auto;}
    </style>

    <!-- SPELLS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
    <script src="js/core.js"></script>
    <script src="js/controllers/regionsController.js"></script>
    <script src="js/controllers/chaptersController.js"></script>
    <script src="js/controllers/eventsController.js"></script>
    <script src="js/services/main.js"></script>

    <!-- FAVICON -->
    <link rel="icon" href="http://heroesonthewater.org/wp-content/uploads/2014/04/logo-ready-ad.png" type="image/png">

</head>
<body>
    <div class="container">

        <!-- HEADER AND EVENT COUNT -->
        <div class="jumbotron text-center">
            <h1>Heroes on the Water<span class="label label-info">{{ events.length }}</span></h1>
        </div>

        <!-- FORM TO CREATE REGIONS -->
        <div id="region-creation-form" class="row creation-form" ng-controller="regionsController">
            <h1 class="text-center"> REGION CREATION </h1>
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control input-lg text-center" placeholder="Insert name here" ng-model="formData.name">
                    </div>
                </form>
            </div>

            <!-- createToDo() WILL CREATE NEW TODOS -->
            <button type="submit" class="btn btn-primary btn-lg col-sm-4 col-sm-offset-4" ng-click="createRegion()">Add Region</button>
        </div>

        <!-- EVENT LIST -->
        <div class="col-sm-12 row" ng-controller="mainController">
            <!-- LOOP OVER THE EVENTS IN $scope.regions -->
            <div class="col-sm-12 region-list" ng-repeat="region in regions" ng-controller="regionsController">
                <div>
                    <div class="col-sm-9"><h1>Region: {{region.name}}</h1></div>
                    <div class="col-sm-3">
                        <label>
                            <input type="checkbox" ng-click="deleteRegion(region.name)">Click to delete region
                        </label>
                    </div>
                </div>
                <div class="col-sm-12 chapter-list" ng-repeat="chapter in region.chapters" ng-controller="chaptersController">
                    <div>
                        <div class="col-sm-9">
                            <h2>Chapter: {{chapter.name}}</h2>
                            <p>Location: {{chapter.location}}</p>
                        </div>
                        <div class="col-sm-3">
                            <label>
                                <input type="checkbox" ng-click="deleteChapter(region.name, chapter.name, region._id, chapter._id)">Click to delete chapter
                            </label>
                        </div>
                    </div>
                    <div class="col-sm-12 event-list" ng-repeat="event in chapter.events" ng-controller="eventsController">
                            <div class="col-sm-9">
                                <h3>Name: {{event.name}}</h3>
                                <h4>Date: {{event.date}}</h4>
                                <h4>Start: {{event.start}}</h4>
                                <h4>End: {{event.end}}</h4>
                                <h4>Venue: {{event.venue}}</h4>
                                <p>Description: {{event.description}}</p>
                                <p>Inventory:</p>
                                <div class="col-sm-12" ng-repeat="item in event.inventory">
                                <p> {{item.number}} {{item.item}} </p>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label>
                                    <input type="checkbox" ng-click="deleteEvent(region.name, chapter.name, event.name, region._id, chapter._id, event._id)">Click to delete event
                                </label>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>